# Configuration de l'API Backend
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws

# Configuration de l'authentification
REACT_APP_AUTH_ENABLED=true
REACT_APP_AUTH_PROVIDER=local

# Configuration des exchanges
REACT_APP_SUPPORTED_EXCHANGES=binance,coinbase,kraken,bybit,gateio,okx

# Configuration de la base de données
REACT_APP_DB_ENABLED=true
REACT_APP_DB_TYPE=postgresql

# Configuration du monitoring
REACT_APP_MONITORING_ENABLED=true
REACT_APP_METRICS_ENABLED=true

# Configuration des alertes
REACT_APP_ALERTS_ENABLED=true
REACT_APP_NOTIFICATIONS_ENABLED=true

# Configuration de la sécurité
REACT_APP_SECURITY_ENABLED=true
REACT_APP_ENCRYPTION_ENABLED=true

# Configuration du backup
REACT_APP_BACKUP_ENABLED=true
REACT_APP_BACKUP_FREQUENCY=daily

# Configuration de l'interface
REACT_APP_THEME=light
REACT_APP_LANGUAGE=fr
REACT_APP_TIMEZONE=Europe/Paris

# Configuration du développement
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=info

